/ meta
%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
%meta{:content => "", :name => "description"}/
%meta{:content => "UA-15601175-9", :name => "google-analytics"}/
= yield :meta_head

/ stylesheets
%link{:href => "/stylesheets/reset.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
%link{:href => "/stylesheets/application.css", :rel => "stylesheet", :type => "text/css"}/
= yield :stylesheet_head

/ javascripts
- %w(jquery/jquery-1.4.2 jquery/jquery.rails jquery/jquery.google-analytics-1.1.3).each do |javascript|
  = javascript_include_tag "http://cachedcommons.org/javascripts/#{javascript}-min.js"
- %w(cufon.yui kievit).each do |javascript|
  = javascript_include_tag "/javascripts/#{javascript}.js"
= javascript_include_tag "application"
= yield :javascript_head

= yield :extra_head