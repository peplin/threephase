%h3= city.name

%h4 Generators
%a{:href => new_city_generator_url(city)} New Generator
%ul
  - city.generators.each do |generator|
    %li
      %a{:href => city_generator_url(city, generator)}
        = generator

%h4 Transmission Lines
%a{:href => new_city_line_url(city)} New Transmission Line
%ul
  - city.lines.each do |line|
    %li
      %a{:href => city_line_url(city, line)}
        = line

%h4 Storage Devices
%a{:href => new_city_storage_device_url(city)} New Storage Device
%ul
  - city.storage_devices.each do |storage_device|
    %li
      %a{:href => city_storage_device_url(city, storage_device)}
        = storage_device

%h5 Load Profile
%ul
  - city.load_profiles.each do |profile|
    %li= profile
