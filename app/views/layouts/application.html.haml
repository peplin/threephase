!!! 5
%html
  %head
    %title Threephase
    = stylesheet_link_tag "reset"
    = stylesheet_link_tag "text"
    = stylesheet_link_tag "960"
    = stylesheet_link_tag "application"
    = javascript_include_tag "http://cachedcommons.org/javascripts/jquery/jquery-1.4.2-min.js"
    = javascript_include_tag :defaults
    = yield :javascript_head
    = csrf_meta_tag
  %body
    .container_12
      .grid_2 Threephase
      .grid_8
        %ul
          %li
            %a{:href => games_path} Games
      .grid_2
        - if current_user
          %ul
            %li
              %a.nice{:href => edit_self_url} Account
            %li
              %a.nice{:href => logout_url} Logout
      .clear
      .grid_7
        = yield
      .grid_5 Right
      .clear
      .prefix_7.grid_5 Footer
